.container {
  display: flex;
  flex-direction: column;
  box-shadow:0 4rpx 20rpx 0 rgba(212,217,223,.5);
}

.tag {
  width:100%;
  font-size: 12px !important;
  border-radius: 0 !important;
  color: #2F4F4F !important;
  text-align: left !important;
  display: inline-flex !important;
  background-color: #fff;
  padding-bottom: 10rpx;
}

.card-container {
  width: 100% !important;
  margin-bottom: 10rpx !important;
  box-shadow: none !important;
  padding-bottom: 10rpx !important;
}

.card-image {
  height: 320rpx !important;
}

.drift-info {
  display: flex;
  flex-direction: column;
  font-size: 12px;
  color: #2f4f4f;
}

.drift-info .info {
  display: flex;
  flex-direction: column;
  margin-top: 6rpx;
}

.pending-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
  margin-top: 8rpx 0;
}

.pending-icon {
  padding-right: 14rpx;
}

.mail-info {
  margin-top: 6rpx;
}

.list-content {
  font-size: 12px
}

.btn-container {
  display: flex;
}

.btn {
  margin-top: 12rpx;
  margin-right: 12rpx;
  background-color: #2F4F4F !important;
}

.list {
  border: 0 !important;
}

.warning-content {
  font-size: 12px;
  color: #ff0000;
}

.warning-icon {
  color: #ff0000 !important;
}
